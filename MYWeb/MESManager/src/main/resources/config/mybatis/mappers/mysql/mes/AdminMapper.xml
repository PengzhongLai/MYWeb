<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mes.mapper.AdminMapper">

    <!-- 验证管理员账号密码 -->
    <select id="queryAdminByLoginId" parameterType="hashmap" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM tb_sys_admin
        WHERE loginId = #{loginId} AND password = #{password}
    </select>

    <!-- 结果映射 -->
    <resultMap id="admin" type="com.mes.domain.Admin">
        <id column="loginId" property="loginId"/>
        <result column="password" property="password"/>
        <result column="createTime" property="createTime"/>
    </resultMap>

    <!-- 查询管理员信息 -->
    <select id="queryAdminInfo" parameterType="hashmap" resultMap="admin">
        SELECT
        loginId,
        password,
        createTime
        FROM tb_sys_admin
        WHERE loginId = #{loginId} AND password = #{password}
    </select>

</mapper>